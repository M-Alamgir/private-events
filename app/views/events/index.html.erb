<div class="absolute inset-x-0 shadow-xl bg-white md:w-4/5 mx-auto rounded-md border-t-8 border-yellow-400 mt-10 flex justify-center py-10">
  <div class="text-gray-600">
    <p id="notice"><%= notice %></p>

    <h1 class="text-6xl text-red-400">Events</h1>

    <table>
      <thead>
        <tr>
          <th>Time</th>
          <th>Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.time %></td>
            <td><%= event.location %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
